<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Когда элемент выбран, иконка становится синей -->
    <item android:state_checked="true" android:color="@color/white" android:alpha="1"/>
    <!-- Когда элемент не выбран, иконка остается черной -->
    <item android:color="@android:color/black" android:alpha="0.5"/>
</selector>